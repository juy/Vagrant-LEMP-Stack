# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[*.php]
indent_style = tab
indent_size = 4

[*.{less,css,js,html}]
indent_style = space
indent_size = 4

[{*.yml,*.json,Vagrantfile}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
