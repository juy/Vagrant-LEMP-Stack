# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = tab
indent_size = 4

[*.blade.php]
indent_style = tab
indent_size = 4
insert_final_newline = false

[*.{less,css,js,html,stub}]
indent_style = tab
indent_size = 4

[{*.yml,*.json,.bowerrc,.jshintrc,Vagrantfile}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
